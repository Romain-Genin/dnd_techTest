<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget class="DND\Catalog\Block\Widget\Slider" id="slider_products" >
        <label>Product Slider</label>
        <description>Generate a slider with all products from a category id</description>
        <parameters>
            <parameter name="category_id" xsi:type="text" required="true" visible="true" sort_order="10">
                <label>Category id</label>
            </parameter>
            <parameter name="slides_to_show" xsi:type="text" required="true" visible="true" sort_order="20">
                <label>Number of slides to show</label>
            </parameter>
        </parameters>
    </widget>
</widgets>
